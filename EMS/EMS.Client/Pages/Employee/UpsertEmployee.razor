@using Microsoft.AspNetCore.Components.QuickGrid
<div class="modal @ModalClass" id="exampleModal" tabindex="-1" style="display:@ModalDisplay; overflow-y: auto;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <span class="material-icons align-top">
                        domain_add
                    </span>
                    @ModalTitle
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick="(()=>fnCloseModal())"></button>
            </div>



            <div class="modal-body">
                <div class="row g-2">
                    <div class="col-md-12">
                        <div class="card">
                            <EditForm Model="EmployeeModel" FormName="frmUpsertEmployee" enctype="multipart/form-data" method="post" OnValidSubmit="fnEmployeeSave">
                                <div class="card-body">
                                    <DataAnnotationsValidator />


                                    @if (FormMessage is not null && !string.IsNullOrWhiteSpace(FormMessage.message))
                                    {
                                        <div class="alert @FormMessage.cssClass">@FormMessage.message</div>
                                    }


                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-floating mb-2">
                                                <InputText @bind-Value="EmployeeModel!.firstName" class="form-control" placeholder="First Name"></InputText>
                                                <label>First Name<span class="str-required">*</span></label>
                                                <ValidationMessage For="@(()=>EmployeeModel.firstName)"></ValidationMessage>
                                            </div>
                                        </div>

                                        <div class="col-6">
                                            <div class="form-floating mb-2">
                                                <InputText @bind-Value="EmployeeModel!.lastName" class="form-control" placeholder="Last Name"></InputText>
                                                <label>Last Name<span class="str-required">*</span></label>
                                                <ValidationMessage For="@(()=>EmployeeModel.lastName)"></ValidationMessage>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-floating mb-2">
                                                <InputText @bind-Value="EmployeeModel!.email" class="form-control" placeholder="Email"></InputText>
                                                <label>Email<span class="str-required">*</span></label>
                                                <ValidationMessage For="@(()=>EmployeeModel.email)"></ValidationMessage>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-floating mb-2">
                                                <input @bind="EmployeeModel!.phone" class="form-control"  placeholder="Phone No"></input>
                                                <label>Phone No</label>
                                                <ValidationMessage For="@(()=>EmployeeModel.phone)"></ValidationMessage>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-floating mb-2">
                                                <input @bind="EmployeeModel!.position" class="form-control"  placeholder="Position"></input>
                                                <label>Position</label>
                                                <ValidationMessage For="@(()=>EmployeeModel.position)"></ValidationMessage>
                                            </div>
                                        </div>

                                        <div class="col-6">
                                            <div class="form-floating mb-2">
                                                <InputSelect @bind-Value="EmployeeModel!.deptId" class="form-select" title="Department is required ">
                                                    <option value="0">(Choose Department)</option>
                                                    @if (objDepartment is not null)
                                                    {
                                                        @foreach (var dept in objDepartment)
                                                        {
                                                            <option value="@dept.deptId"> @dept.name</option>
                                                        }
                                                    }
                                                </InputSelect>
                                                <label>Department<span class="str-required">*</span></label>
                                                <ValidationMessage For="@(()=>EmployeeModel.deptId)"></ValidationMessage>
                                            </div>
                                        </div>

                                    </div>


                                    <div class="col-md-12">
                                        <div class="form-check">
                                            <InputCheckbox @bind-Value="EmployeeModel!.isActive" class="form-check-input"></InputCheckbox>
                                            <label class="form-check-label">Active</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-footer">
                                    <button class="btn btn-success" type="submit">Save</button>
                                </div>


                            </EditForm>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}





