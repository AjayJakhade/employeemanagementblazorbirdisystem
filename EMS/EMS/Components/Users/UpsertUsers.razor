@using Microsoft.AspNetCore.Components.QuickGrid
<div class="modal @ModalClass" id="exampleModal" tabindex="-1" style="display:@ModalDisplay; overflow-y: auto;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <span class="material-icons align-top">
                        domain_add
                    </span>
                    @ModalTitle
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick="(()=>fnCloseModal())"></button>
            </div>



            <div class="modal-body">
                <div class="row g-2">
                    <div class="col-md-12">
                        <div class="card">
                            <EditForm Model="UserModel" FormName="frmUpsertUsers" enctype="multipart/form-data" method="post" OnValidSubmit="fnSaveUsers">
                                <div class="card-body">
                                    <DataAnnotationsValidator />


                                    @if (formMessage is not null && !string.IsNullOrWhiteSpace(formMessage.message))
                                    {
                                        <div class="alert @formMessage.cssClass">@formMessage.message</div>
                                    }


                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-floating mb-2">
                                                <InputText @bind-Value="UserModel!.username" class="form-control" placeholder="Last Name"></InputText>
                                                <label>USers Name<span class="str-required">*</span></label>
                                                <ValidationMessage For="@(()=>UserModel.username)"></ValidationMessage>
                                            </div>
                                        </div>

                                        <div class="col-6">
                                            <div class="form-floating mb-2">
                                                <InputText @bind-Value="UserModel!.mobile" class="form-control" placeholder="Mobile"></InputText>
                                                <label>Mobile<span class="str-required">*</span></label>
                                                <ValidationMessage For="@(()=>UserModel.mobile)"></ValidationMessage>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-floating mb-2">
                                                <InputText @bind-Value="UserModel!.email" class="form-control" placeholder="Email"></InputText>
                                                <label>Email<span class="str-required">*</span></label>
                                                <ValidationMessage For="@(()=>UserModel.email)"></ValidationMessage>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-floating mb-2">
                                                <input @bind="UserModel!.password" class="form-control" type="password" placeholder="PassWord"></input>
                                                <label>PassWord</label>
                                                <ValidationMessage For="@(()=>UserModel.password)"></ValidationMessage>
                                            </div>
                                        </div>

                                        <div class="col-6">
                                            <div class="form-floating mb-2">
                                                <InputSelect @bind-Value="UserModel!.roleid" class="form-select" title="role is required ">
                                                    <option value="">(Choose role)</option>
                                                    @if (objRole is not null)
                                                    {
                                                        @foreach (var role in objRole)
                                                        {
                                                            <option value="@role.roleid"> @role.rolename</option>
                                                        }
                                                    }
                                                </InputSelect>
                                                <label>Roles<span class="str-required">*</span></label>
                                                <ValidationMessage For="@(()=>UserModel.roleid)"></ValidationMessage>
                                            </div>
                                        </div>
                                      
                                    </div>


                                    <div class="col-md-12">
                                        <div class="form-check">
                                            <InputCheckbox @bind-Value="UserModel!.isActive" class="form-check-input"></InputCheckbox>
                                            <label class="form-check-label">Active</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-footer">
                                    <button class="btn btn-success" type="submit">Save</button>
                                </div>


                            </EditForm>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}





